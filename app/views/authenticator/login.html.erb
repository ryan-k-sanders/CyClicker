<h1>Login:</h1>
<table>
<form id="myform" action="<%= url_for :controller => "authenticator", :action => "authenticate"%>" method="POST" data-remote="true">
    <tr><td><%= label_tag(:netid, "Net-ID:") %> </td>
    <td><%= text_field_tag(:netid) %><td>
    </tr>
  <tr>
  <td><%= label_tag(:password, "Password:") %> </td>
  <td>  <%= password_field_tag(:password) %> </td>
  </tr>
  <tr>
    <td></td> <td align="right">
  <%= submit_tag("Login", :class => 'button', :type => 'submit') %>  </td>
  </tr>
</form>
</table>
<script type="text/javascript">
    $('input[type="submit"]').bind('click', function(){$('#myform').submit();});
    $('#content').trigger("create");
</script>