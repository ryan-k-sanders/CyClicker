  <a href= "<%= url_for :controller => 'accounts', :action => 'index', :account_type => 'admin' %>">Admins</a>&nbsp;| &nbsp;
  <a href= "<%= url_for :controller => 'accounts', :action => 'index', :account_type => 'instructor' %>">Instructors</a>&nbsp;|&nbsp;
