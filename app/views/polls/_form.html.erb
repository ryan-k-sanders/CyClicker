<%= form_for(@poll, :remote => true) do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     Course:
     <%= f.select :courseCode, Offering.where(:instructorID => session[:account].netid).collect {|o| [ o.courseCode, o.courseCode ] }, {:include_blank => 'Select'}  %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
